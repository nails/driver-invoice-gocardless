{
    "name": "nailsapp/driver-invoice-gocardless",
    "keywords": ["Nails", "Shed Collective", "CodeIgniter", "Invoice Module", "Payments", "Driver", "GoCardless"],
    "homepage": "http://nailsapp.co.uk/modules/invoice/driver/gocardless",
    "description": "This is the \"GoCardless\" driver for the Nails Invoice module.",
    "license": "MIT",
    "authors":
    [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support":
    {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require":
    {
        "nailsapp/module-invoice": "dev-develop",
        "gocardless/gocardless-pro": "^0.9.2"
    },
    "require-dev":
    {
        "phpunit/phpunit": "4.*"
    },
    "extra":
    {
        "nails" :
        {
            "name": "GoCardless",
            "type": "driver",
            "subType": "payment",
            "forModule": "nailsapp/module-invoice",
            "data": {
                "namespace": "Nails\\Invoice\\Driver\\",
                "class": "GoCardless",
                "isRedirect": true,
                "settings": [
                    {
                        "key": "sLabel",
                        "label": "Label",
                        "info": "The name of the provider, as seen by customers.",
                        "default": "GoCardless"
                    },
                    {
                        "key": "iLogoId",
                        "label": "Logo",
                        "info": "The logo of the provider, as seen by customers",
                        "default": null,
                        "type": "image",
                        "bucket": "nailsapp-driver-invoice-gocardless"
                    }
                ]
            }
        }
    },
    "autoload":
    {
        "psr-4": {"Nails\\Invoice\\Driver\\": "src/"}
    }
}
